# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_server_id_here
COMMAND_PREFIX=!

# Google Sheets Configuration (Service Account)
GOOGLE_SHEET_ID=your_spreadsheet_id_here
GOOGLE_SERVICE_ACCOUNT_PATH=./service-account-key.json

# 참고: 권한 관리는 Google Sheets의 '보탐봇-길드원정보' 시트에서 관리합니다
# 권한 컬럼에 '운영진' 또는 '일반길드원'을 입력하세요

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info

# Timezone Configuration
TZ=Asia/Seoul

# 알림 시스템 설정
NOTIFICATION_CHANNEL_ID=your_notification_channel_id_here
NOTIFICATION_ENABLED=true

# TTS (Text-to-Speech) Configuration
TTS_PROVIDER=responsivevoice
TTS_VOICE_CHANNEL_ID=your_voice_channel_id_here

# ResponsiveVoice TTS Settings (완전 무료, 게임 길드 최적화)
RESPONSIVEVOICE_RATE=0.8
RESPONSIVEVOICE_PITCH=1.0
RESPONSIVEVOICE_VOLUME=1.0